<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFFFF"
        android:orientation="horizontal">


        <Button
            android:id="@+id/buttonerase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="350dp"
            android:layout_weight="1"
            android:background="#9bc3f1"
            android:text="@string/erase"
            android:textColor="#055174"
            android:textSize="30sp" />
<!--
                <Button
                    android:id="@+id/button_move"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/movecd_bord" />
       -->

                <Button
                    android:id="@+id/buttonStop"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/check" />

    </LinearLayout>

    <!--Espace pour le dessin-->
    <gscop.mfm_application.Dessin_item18
        android:id="@+id/drawingItem18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/coffre"
        android:visibility="visible" />
    <!--  android:background="#FFFFFFFF" -->

</RelativeLayout>