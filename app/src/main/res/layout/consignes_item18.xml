<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="@string/instructionsItem18"
            android:textAlignment="center"
            android:textColor="#0d8dc9"
            android:textSize="30sp"
            android:textStyle="bold" />

    </LinearLayout>



    <Button
        android:id="@+id/boutonDemarrer"
        android:layout_width="80dip"
        android:layout_height="80dip"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dip"
        android:layout_marginRight="25dip"
        android:layout_marginBottom="24dp"
        android:background="@drawable/play" />

    <Button
        android:id="@+id/demo"
        android:layout_width="207dp"
        android:layout_height="79dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="70dip"
        android:layout_marginRight="25dip"
        android:layout_marginBottom="23dp"
        android:textColor="#055174"
        android:background="#caddf4"
        android:textSize="25sp"
        android:onClick="videoplay"
        android:text="Démarer la démo" />

    <VideoView
        android:id="@+id/videoView"
        android:background="@drawable/radio_ok"
        android:layout_width="match_parent"
        android:layout_height="702dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="163dp" />
</RelativeLayout>